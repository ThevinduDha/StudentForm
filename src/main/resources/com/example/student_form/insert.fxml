<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.student_form.InsertController">
    <children>
        <VBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <TextField fx:id="idField" promptText="Student ID" />
            <TextField fx:id="nameField" promptText="Name" />
            <TextField fx:id="ageField" promptText="Age" />
            <TextField fx:id="addressField" promptText="Address" />
            <Label fx:id="statusLabel" prefHeight="17.0" prefWidth="210.0" />

            <HBox alignment="CENTER" spacing="10">
                <Button onAction="#handleInsert" text="Insert" />
                <Button onAction="#handleDelete" text="Delete" />
                <Button onAction="#handleSearch" text="Search" />
            </HBox>


        </VBox>
    </children>
</AnchorPane>